<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/promote_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/txtClipartTitle"
    android:layout_centerHorizontal="true"
    android:orientation="vertical" 
    android:focusable="false"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:background="@color/button_blue"
            android:orientation="vertical"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_horizontal"
                android:adjustViewBounds="true"
                android:scaleType="centerInside"
                android:src="@drawable/logo_tatti" />

            <TextView
                android:id="@+id/txtCampaignName"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:gravity="center"                
                android:singleLine="false"
                android:text="Hilton Tel Aviv"
                android:textSize="18sp"
                android:textStyle="normal" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="2"
                android:ellipsize="end"
                android:gravity="center_horizontal"
                android:paddingRight="5dp"
                android:text="Click To Share"
                android:textSize="12sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imgBusinessImage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:layout_weight="2"
            android:scaleType="centerCrop"
            android:src="@drawable/image_hilton" />
        <!--
        <ImageView
            android:id="@+id/btnFacebookPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/facebook_post" />

        <ImageView
            android:id="@+id/btnTwitterPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/twitter_post" />

        <ImageView
            android:id="@+id/btnInstagramPost"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/instagram_post" />
        -->
    </LinearLayout>

</LinearLayout>